<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/home_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 감소 각인 -->
        <TextView
            android:id="@+id/decrease_in_attack_power_text"
            style="@style/imprinting_red_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/decrease_in_attack_power"
            app:layout_constraintStart_toStartOf="@id/home_constraintLayout"
            app:layout_constraintTop_toTopOf="@id/home_constraintLayout"
             />

        <TextView
            android:id="@+id/decrease_in_attack_power_level_text"
            style="@style/imprinting_red_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lv. 3"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/decrease_in_attack_power_text"
            app:layout_constraintTop_toTopOf="@id/home_constraintLayout"
            />

        <TextView
            android:id="@+id/decrease_in_attack_power_over_count_text"
            style="@style/imprinting_red_font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+6"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toRightOf="@id/decrease_in_attack_power_level_text"
            app:layout_constraintTop_toTopOf="@id/home_constraintLayout"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/blank"
            app:layout_constraintTop_toBottomOf="@id/decrease_in_attack_power_text"
            app:layout_constraintLeft_toLeftOf="@id/home_constraintLayout"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>